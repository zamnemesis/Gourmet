<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="persistenceUnitManager">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <!-- Annotated entity classes -->
        <class>tarasenko.entity.User</class>
        <class>tarasenko.entity.Category</class>
        <class>tarasenko.entity.Cuisine</class>
        <class>tarasenko.entity.Preference</class>
        <class>tarasenko.entity.Product</class>
        <class>tarasenko.entity.Recipe</class>
        <class>tarasenko.entity.Ingredient</class>
    </persistence-unit>
</persistence>